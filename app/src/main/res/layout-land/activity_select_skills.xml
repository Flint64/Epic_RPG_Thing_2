<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.selectSkillsActivity">

    <TextView
        android:id="@+id/skill_1_label"
        android:layout_width="422dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/skill_2_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763" />

    <CheckBox
        android:id="@+id/selectSkill_1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/skill_1_label"
        app:layout_constraintEnd_toStartOf="@+id/skill_1_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skill_1_label"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_2_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="44dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/skill_3_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/selectSkill_2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/skill_2_label"
        app:layout_constraintEnd_toStartOf="@+id/skill_2_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skill_2_label"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_3_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/skill_4_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/selectSkill_3"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/skill_3_label"
        app:layout_constraintEnd_toStartOf="@+id/skill_3_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skill_3_label"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_4_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="128dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/selectSkill_4"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/skill_4_label"
        app:layout_constraintEnd_toStartOf="@+id/skill_4_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skill_4_label"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Choose 2 skills:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="createCharacter"
        android:text="Create Character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>