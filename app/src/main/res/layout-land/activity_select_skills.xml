<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.selectSkillsActivity">

    <TextView
        android:id="@+id/skill_1_label"
        android:layout_width="425dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_1"
        app:layout_constraintEnd_toStartOf="@+id/selectSkill_1"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_1"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/selectSkill_1"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/selectSkill_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/skill_2_label"
        android:layout_width="425dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_2"
        app:layout_constraintEnd_toStartOf="@+id/selectSkill_2"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_2"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/selectSkill_2"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginBottom="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/selectSkill_3"
        app:layout_constraintEnd_toEndOf="@+id/selectSkill_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/selectSkill_1"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/skill_3_label"
        android:layout_width="425dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_3"
        app:layout_constraintEnd_toStartOf="@+id/selectSkill_3"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_3"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/selectSkill_3"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginBottom="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/selectSkill_4"
        app:layout_constraintEnd_toEndOf="@+id/selectSkill_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/selectSkill_2"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/skill_4_label"
        android:layout_width="425dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_4"
        app:layout_constraintEnd_toStartOf="@+id/selectSkill_4"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_4"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/selectSkill_4"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:layout_marginBottom="100dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/selectSkill_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/selectSkill_3"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>