<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_character_background"
    tools:context=".view.selectSkillsActivity">

    <TextView
        android:id="@+id/skill_1_label"
        android:layout_width="422dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_1"
        app:layout_constraintStart_toEndOf="@+id/selectSkill_1"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_1"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/selectSkill_1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_2_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_2"
        app:layout_constraintStart_toEndOf="@+id/selectSkill_2"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_2" />

    <CheckBox
        android:id="@+id/selectSkill_2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSkill_1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_3_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_3"
        app:layout_constraintStart_toEndOf="@+id/selectSkill_3"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_3" />

    <CheckBox
        android:id="@+id/selectSkill_3"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSkill_2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/skill_4_label"
        android:layout_width="425dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/selectSkill_4"
        app:layout_constraintStart_toEndOf="@+id/selectSkill_4"
        app:layout_constraintTop_toTopOf="@+id/selectSkill_4" />

    <CheckBox
        android:id="@+id/selectSkill_4"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSkill_3"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Choose 2 skills:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/medievalsharp"
        android:onClick="createCharacter"
        android:text="Create Character"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/elementLightning"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/t_lightning"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/t_lightning" />

    <ImageButton
        android:id="@+id/elementFire"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/t_fire"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/iceLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/t_fire" />

    <ImageButton
        android:id="@+id/elementIce"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/t_ice"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/lightningLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/t_ice" />

    <ImageButton
        android:id="@+id/elementEarth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/t_earth"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/fireLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/t_earth" />

    <TextView
        android:id="@+id/earthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Earth"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/elementEarth"
        app:layout_constraintEnd_toEndOf="@+id/elementEarth"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/elementEarth"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/fireLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Fire"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/elementFire"
        app:layout_constraintEnd_toEndOf="@+id/elementFire"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="@+id/elementFire"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/iceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Ice"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/elementIce"
        app:layout_constraintEnd_toEndOf="@+id/elementIce"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/elementIce"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/lightningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Lightning"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/elementLightning"
        app:layout_constraintEnd_toEndOf="@+id/elementLightning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/elementLightning"
        tools:visibility="invisible" />

    <CheckBox
        android:id="@+id/earthCheck"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/fireCheck"
        app:layout_constraintEnd_toStartOf="@+id/elementEarth" />

    <CheckBox
        android:id="@+id/fireCheck"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/iceCheck"
        app:layout_constraintEnd_toStartOf="@+id/elementFire" />

    <CheckBox
        android:id="@+id/iceCheck"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/lightningCheck"
        app:layout_constraintEnd_toStartOf="@+id/elementIce" />

    <CheckBox
        android:id="@+id/lightningCheck"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/elementLightning" />

</androidx.constraintlayout.widget.ConstraintLayout>