<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background"
    tools:context=".view.newGameActivity">

    <Button
        android:id="@+id/newCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/medievalsharp"
        android:onClick="createNewCharacter"
        android:text="New Character"
        app:layout_constraintEnd_toStartOf="@+id/loadCharacter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loadCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="228dp"
        android:fontFamily="@font/medievalsharp"
        android:onClick="loadCharacter"
        android:text="Load Character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>